/* 博文导航栏 start */
.blog-header
  width: 100%
  height: 40px

.blog-nav ul
  height:30px
  max-width:1200px
  position:relative
  top: 10px
  text-align:center
  margin: 0 auto


.blog-nav ul:before
  content:''
  width:97%
  height:1px
  zoom: 1
  background:#ddd
  position:absolute
  left:1.5%
  top:15px

.blog-nav ul li
  padding:4px 8px 0
  display:inline-block
  position:relative
  background: #f6f5f5

ul li .subnav-link
  color: #666
  font-size: 14px
  font-weight: 500

/* 博文导航栏 end */
/*博文链接 start*/
.boca
  width: 1280px
  margin: 20px auto

.essay
  overflow: hidden
  background: #fff
  width: 300px
  height: 240px
  float: left
  margin: 10px
  position: relative
  border-radius: 8px

.essay .essay-link .essay-pic
  width: 100%
  height: 170px

.essay .essay-link .essay-name
  color: #555
  text-align: center

.essay .essay-link .essay-stage
  color: #000
  position: absolute
  left: 4px
  bottom:4px

.essay-stage svg
  display: inline-block
  vertical-align: middle
  margin-right: 4px

.essay-stage .essay-date
  color: #bfbfbf
  display: inline-block
  vertical-align: middle

.essay .essay-tags
  position: absolute
  right: 4px
  bottom: 4px

.essay .essay-tags svg
  display: inline-block
  vertical-align: middle
  margin-right:4px

.essay .essay-tags .tags-link
  display: inline-block
  vertical-align: middle

.tag-list-link
  color: #bfbfbf

.tag-list-count
  display: none

.tags-link .tag-list .tag-list-item
  display: none

.tags-link .tag-list .tag-list-item:first-child
  display: block
/*博文链接 end*/

/* 分页控制 start */
.page-oper
  width: 400px
  height: 100px
  margin: 0 auto
  clear: both

.page-prev
  width: 80px
  height: 40px
  color: #fff
  text-align: center
  line-height: 40px
  background: #3B445B
  display: block
  margin-top: 30px
  float: left
  border-radius: 14px

.page-next
  width: 80px
  height: 40px
  color: #fff
  text-align: center
  line-height: 40px
  background: #3B445B
  display: block
  margin-top: 30px
  float: right
  border-radius: 14px


/*分页控制 end*/

/* 博文链接(移动端) start*/

+ mobile() {

   .boca {
     width: 100%

   }

   .essay {
      width: 100%
      margin: 16px 0
      float: none
   }

  .blog-nav ul {
    float: none
    display: block
    white-space: nowrap
    height: 100%
    font-size: 0
    position: relative
    -webkit-overflow-scrolling: touch
    overflow-x: scroll
    overflow-y: hidden
  }

  /* 分页控制 start */
  .page-oper{
    width: 100%
    height: 100px
  }
  /* 分页控制 end */
}

/* 博文链接(移动端) end*/
